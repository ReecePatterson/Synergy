<Page
    x:Class="RiverWatch_Windows_Phone_App.HubPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RiverWatch_Windows_Phone_App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:RiverWatch_Windows_Phone_App.Data"
   >

    <Grid x:Name="LayoutRoot">
        <Hub x:Name="Hub" x:Uid="Hub" Header="RiverWatch" Background="{ThemeResource HubBackgroundImageBrush}">
            <HubSection x:Uid="HubSection1" Header="Submit Report Hub">
                <DataTemplate>
                    <Grid>
                        <Button x:Name="CameraButton" Content="Camera" HorizontalAlignment="Left" Margin="20,60,0,0" VerticalAlignment="Top" Click="CameraButton_Click"/>
                        <Button x:Name="GPSButton" Content="GPS" HorizontalAlignment="Left" Margin="20,120,0,0" VerticalAlignment="Top" Click="GPSButton_Click"/>
                        <Button x:Name="DescriptionButton" Content="Description" HorizontalAlignment="Left" Margin="20,180,0,0" VerticalAlignment="Top" Click="DescriptionButton_Click"/>
                        <Button x:Name="TestButton" Content="Test" HorizontalAlignment="Left" Margin="20,240,0,0" VerticalAlignment="Top" Click="TestButton_Click"/>
                    </Grid>
                </DataTemplate>
            </HubSection>

            <HubSection x:Uid="HubSection2" Header="WaterWand Hub">
                <DataTemplate>
                    <Grid>
                        <TextBlock>Work In Progress</TextBlock>
                    </Grid>
                </DataTemplate>
            </HubSection>
        </Hub>
        <TextBox x:Name="apple" HorizontalAlignment="Left" Margin="0,542,0,0" TextWrapping="Wrap" Text="DynamicDebug" VerticalAlignment="Top" Height="98" Width="400"/>

    </Grid>
</Page>